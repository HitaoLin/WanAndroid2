<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_dividend_details"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="@color/transparent"
        app:tabMinWidth="0.5dp"
        app:tabSelectedTextColor="@color/wks_bg"
        android:layout_gravity="center_horizontal"
        app:tabTextColor="@android:color/black"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabIndicatorFullWidth="true"
        app:tabMode="scrollable"
        android:background="@color/white"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_dividend_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>